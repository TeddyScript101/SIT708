<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/activity_choose_interest"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:paddingTop="100dp"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center">

        <!-- Big title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your"
            android:textSize="36sp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interests"
            android:textSize="36sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You may select up to 10 topics"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- ChipGroup for selecting interests -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/interestChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="false"
            app:selectionRequired="false"
            app:chipSpacing="12dp"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center">

            <!-- Chips (selectable topics) -->
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Algorithms"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Structures"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SQL"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Testing"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maths"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chemistry"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Physics"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Japanese"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Economics"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biology"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hong Kong Pop"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kpop"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:checkable="true" />
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basketball"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:checkable="true" />
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Football"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:checkable="true" />
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tennis"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:checkable="true" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Continue button -->
        <Button
            android:id="@+id/continueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:backgroundTint="@android:color/white"
            android:textColor="#2196F3"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
