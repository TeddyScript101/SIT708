<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quizHomeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:paddingVertical="24dp">

    <LinearLayout
        android:id="@+id/quizHomeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <!-- Greeting Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="8dp"
            android:gravity="top"
            android:weightSum="1">

            <!-- Greeting Text -->
            <TextView
                android:id="@+id/greetingText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Hello, Your Name"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold" />

            <!-- Vertical Button Group -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="end">

                <Button
                    android:id="@+id/profileButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="My Profile"
                    android:textSize="10dp"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#2196F3"
                    android:paddingHorizontal="12dp"
                    android:layout_marginBottom="4dp" />

                <Button
                    android:id="@+id/historyButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="History"
                    android:textSize="10dp"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#2196F3"
                    android:paddingHorizontal="12dp"
                    android:layout_marginBottom="4dp" />

                <Button
                    android:id="@+id/plansButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Plans"
                    android:textSize="10dp"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#2196F3"
                    android:paddingHorizontal="12dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Task Notification Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#D4E9D4"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/taskNotificationIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_notifications" />

                <TextView
                    android:id="@+id/taskDueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You have 3 tasks due"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Quiz Cards Container -->
        <LinearLayout
            android:id="@+id/quizContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>
</ScrollView>
